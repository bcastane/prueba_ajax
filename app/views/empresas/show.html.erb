<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<%= line_chart @reclamos_por_dia %>


<p>
  <strong>Nombre:</strong>
  <%= @empresa.nombre %>
</p>

<p>
  <strong>Rubro:</strong>
  <%= @empresa.rubro %>
</p>

